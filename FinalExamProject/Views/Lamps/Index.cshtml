@model IEnumerable<FinalExamProject.Models.Lamp>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LampName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Likes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LampImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LampName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Likes)
        </td>
        <td>
            <a href="@Url.Action("Details", "Images", new { id=item.ImageId})">
                <img src="~/Pictures/@item.LampImage.ImageName" class="imageSizing" />
            </a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LampId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LampId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LampId })
        </td>
    </tr>
}

</table>
